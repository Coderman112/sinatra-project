<h1>Edit Pokemon</h1>


<form action="/pokemons/<%=@pokemon.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label>Pokemon Name: </label>
    <input type="text" name="pokemon[name]" value="<%=@pokemon.name%>">
    <label>Pokemon Type: </label>
    <input type="text" name="pokemon[element]" value="<%=@pokemon.element%>">
    <label>Pokemon Sub-Type: </label>
    <input type="text" name="pokemon[sub_element]" value="<%=@pokemon.sub_element%>">
    <input type="submit">
</form>